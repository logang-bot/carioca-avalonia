<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CariocaAvalonia.MainWindow"
        Title="CariocaAvalonia">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Border Padding="15">
      <Grid Background="#0078D7" Height="50">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Hamburger Icon (Unicode) -->
        <TextBlock Text="â˜°" FontSize="20" VerticalAlignment="Center" Margin="16, 0, 0, 0"/>

        <!-- Spacer -->
        <TextBlock Grid.Column="1"/>

        <!-- Profile Icon (can be replaced with Image later) -->
        <TextBlock Grid.Column="2" Text="ðŸ‘¤" FontSize="20" VerticalAlignment="Center" Margin="0, 0, 16, 0"/>
      </Grid>
    </Border>

    <!-- ðŸŸ¥ Main Content -->
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="250"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <!-- List Panel -->
      <ListBox Grid.Column="0" Margin="10">
        <ListBoxItem Content="Item 1"/>
        <ListBoxItem Content="Item 2"/>
        <ListBoxItem Content="Item 3"/>
      </ListBox>

      <!-- Detail Panel -->
      <Border Grid.Column="1" Margin="10" BorderBrush="Gray" BorderThickness="1" Padding="10">
        <TextBlock Text="Detail View" FontSize="24"/>
      </Border>
    </Grid>
    
  </Grid>
</Window>
